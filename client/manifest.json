{
  "manifest_version": 2,

  "name": "Extension",
  "description": "Make browser talkable and upload some info to server.",
  "version": "1.0",

  "permissions": [
    "http://localhost:3000/*",
    "ws://127.0.0.1:5678/*",    
    "tabs",
    "notifications"
  ],
  "page_action": {
		"default_icon": {
			"19": "images/icon.png",
			"38": "images/icon.png"
		},
		"default_title": "information", // shown in tooltip
		"default_popup": "index.html"
	},
  "background": { "scripts": ["js/jquery-2.1.1.min.js" ,"js/background.js", "js/bg_2_content.js"]  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["js/jquery-2.1.1.min.js", "js/jquery.barrager.js", "js/content.js"],
    "css":["css/barrager.css","css/content.css"]
  }]  
}